{
    "name": "really-simple-dice",
    "version": "1.0.0",
    "main": "js/index.js",
    "license": "MIT",
    "scripts": {
        "build": "tsc --project ./tsconfig.json",
        "exec": "babel-node ./js/index.js --config-file ./babel.config.js",
        "develop": "npm run build && npm run exec",
        "develop:watch": "nodemon --exec npm run develop --watch ts",
        "go": "npm run build && npm run exec",
        "lint": "eslint ./ts/src/**/*.ts --fix --config ./eslint.config.js",
        "lint:watch": "nodemon --exec yarn lint",
        "test": "jest --config ./jest.config.js",
        "test:watch": "npm run test --watchAll"
    },
    "dependencies": {
        "@babel/core": "^7.6.4",
        "@babel/node": "^7.5.5",
        "@babel/plugin-proposal-object-rest-spread": "^7.5.5",
        "@babel/preset-env": "^7.5.5",
        "@tsconfig/node12": "^1.0.7",
        "@types/jest": "^26.0.15",
        "@types/node": "^14.14.6",
        "@typescript-eslint/eslint-plugin": "^4.8.2",
        "@typescript-eslint/parser": "^4.8.2",
        "babel-plugin-module-resolver": "^3.2.0",
        "eslint": "^6.8.0",
        "jest": ">=26.0.0 <27.0.0-0",
        "nodemon": "^1.19.1",
        "ts-jest": "^26.4.4",
        "typescript": "^4.0.5"
    }
}
